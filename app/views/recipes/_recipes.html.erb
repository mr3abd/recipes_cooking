<div class="album py-5 bg-light">
  <div class="container">

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
    <% recipes.each do |recipe|  %>
      <div class="col">
        <div class="card shadow-sm">
          <img src=<%=recipe.image %> , class="bd-placeholder-img card-img-top"  width="100%" height="225">

          <div class="card-body">
            <h1 class="fw-light"> <%= recipe.title %></h1>
            <ul>
              <% recipe.ingredients.each do |ingredient| %>
                <li><%= ingredient.title %></li>
              <% end %>
            </ul>
            <p class="card-text">
              <strong>Ratings:</strong> <%=recipe.ratings %>
            </p>
            <p class="card-text">
              <strong>Category:</strong> <%=recipe.category.title %>
            </p>
            <p class="card-text">
              <strong>Author:</strong> <%=recipe.author.name %>
            </p>

            <p class="card-text">
              <strong>TotlaTime:</strong> <%= recipe.total_time.to_i %> min
            </p>


            <div class="d-flex justify-content-between align-items-center">
              <small class="text-muted"> <%=time_ago_in_words(recipe.created_at) %></small>
            </div>
          </div>
        </div>
      </div>

    <% end %>
    </div>
  </div>
</div>

